/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

.authorize {
    background: rgba(0,0,0,0.4);
    width: 100%;
    height: 100%;
    position:fixed;
    top: 0;
    left: 0;
}
.authorize-main {
    position:absolute;
    top:50%;
    left:50%;
    width:600rpx;
    height:280rpx;
    background:#ffffff;
    border-radius:3px;
    margin-top:-140rpx;
    margin-left:-300rpx;
}
.authorize-title {
    text-align:center;
    font-size:37rpx;
    height:98rpx;
    line-height:110rpx;
}
.authorize-content {
    padding: 0 50rpx;
}
.authorize-icon {
    padding-top: 20rpx;
    text-align: center;
}
.authorize-icon-img {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    text-align: center;
}
.authorize-txt {
    font-size: 28rpx;
    padding-bottom: 26rpx;
}
.authorize-subtxt {
    font-size:30rpx;
    color:#999999;
    border-top:2rpx solid #eaeaea;
    padding-top:20rpx;
    padding-bottom:40rpx;
    text-align:center;
}
